<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_ces_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/reset_password"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/reset_password_ins"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password_"
        style="@style/EditTextLoginForm"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_action_password"
        android:hint="New Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirm_password_"
        style="@style/EditTextLoginForm"
        android:drawableLeft="@drawable/ic_action_confirm_password"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/reset_password_btn"
        style="@style/ButtonLoginForm"
        android:text="OK" />

</LinearLayout>