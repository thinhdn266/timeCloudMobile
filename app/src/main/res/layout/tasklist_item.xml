<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/taskBackground"
    android:gravity="center"
    android:paddingLeft="18dp"
    android:paddingRight="18dp">

    <ImageView
        android:id="@+id/task_center"
        android:layout_width="180dp"
        android:layout_height="67dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="start"
        android:ems="10"
        android:paddingTop="12dp"
        android:singleLine="true"
        android:text="Home page"
        android:textColor="@color/colorBlackText"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_name"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/project_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorRedIcon" />

        <TextView
            android:id="@+id/project_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:ems="10"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:text="Framer - Design"
            android:textColor="@color/colorGrayText"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/task_sec_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="15dp"
        android:text="35s"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/task_hour_min_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/task_sec_textview"
        android:layout_below="@id/task_sec_textview"
        android:layout_marginTop="-5dp"
        android:text="2:30"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>