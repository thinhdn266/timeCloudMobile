<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextLoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/login_edit_text</item>
        <item name="android:textColorHint">#88ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonLoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonGoogle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/google_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableLeft">@drawable/ic_action_google</item>
        <item name="android:drawableStart">@drawable/ic_action_google</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">Google</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonFacebook">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/facebook_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">Facebook</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:listPreferredItemHeightSmall">60dp</item>
    </style>
</resources>