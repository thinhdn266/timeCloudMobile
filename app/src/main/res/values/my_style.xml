<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextLoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/login_edit_text</item>
        <item name="android:textColorHint">#88ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="ButtonLoginForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/login_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>