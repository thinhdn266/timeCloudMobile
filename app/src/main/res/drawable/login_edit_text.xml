<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="150dip" />
            <stroke android:width="1dip" android:color="#88ffffff" />
            <solid android:color="#44669e95"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="180dip" />
            <stroke android:width="1dip" android:color="#44ffffff" />
            <gradient android:angle="-90" android:startColor="#44121221" android:endColor="#44121221" />
        </shape>
    </item>
</selector>