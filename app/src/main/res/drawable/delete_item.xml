        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/colorOrangeIcon" android:startColor="@color/colorOrangeIcon" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/colorOrangeIcon" android:startColor="@color/colorOrangeIcon" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-90" android:endColor="@color/colorRedIcon" android:startColor="@color/colorGoogle" />
        </shape>
    </item>
</selector>