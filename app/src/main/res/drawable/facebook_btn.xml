<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/radius_btn" />
            <stroke android:width="1dip" android:color="#aaffffff" />
            <gradient android:angle="-90" android:startColor="@color/colorFacebook" android:endColor="#2E467D"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/radius_btn" />
            <stroke android:width="1dip" android:color="@color/colorFacebook" />
            <solid android:color="#2E467D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:topRightRadius="@dimen/radius_btn"
                android:bottomRightRadius="@dimen/radius_btn"/>
            <stroke android:width="1dip" android:color="#88ffffff" />
            <gradient android:angle="-90" android:startColor="@color/colorFacebook" android:endColor="@color/colorFacebook" />
        </shape>
    </item>
</selector>