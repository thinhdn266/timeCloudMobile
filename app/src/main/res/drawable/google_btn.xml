<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/radius_btn" android:topLeftRadius="@dimen/radius_btn" />
            <stroke android:width="1dip" android:color="#aaffffff" />
            <gradient android:angle="-90" android:endColor="#B23A2C" android:startColor="@color/colorGoogle" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/radius_btn" android:topLeftRadius="@dimen/radius_btn" />
            <stroke android:width="1dip" android:color="@color/colorGoogle" />
            <solid android:color="#B23A2C" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/radius_btn" android:topLeftRadius="@dimen/radius_btn" />
            <stroke android:width="1dip" android:color="#88ffffff" />
            <gradient android:angle="-90" android:endColor="@color/colorGoogle" android:startColor="@color/colorGoogle" />
        </shape>
    </item>
</selector>